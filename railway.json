{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn --workers 4 --threads 2 --timeout 120 --bind 0.0.0.0:$PORT --log-level warning --access-logfile - --error-logfile - wsgi:application",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

